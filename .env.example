# ============================================================================
# PAPERCLIP ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git (it's in .gitignore)
# ============================================================================

# ============================================================================
# LLM & AI SERVICES
# ============================================================================
COHERE_API_KEY=your-cohere-api-key-here
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_TRACING_V2=false

# Alternative LLM Providers (optional)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# EXTERNAL API TOKENS
# ============================================================================
GITHUB_TOKEN=your-github-personal-access-token-here
SEMANTIC_SCHOLAR_API_KEY=optional-semantic-scholar-key

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For Development (SQLite)
DATABASE_URL=sqlite:///./paperclip.db

# For Production (PostgreSQL - uncomment and fill)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/paperclip_prod
# DATABASE_ECHO=false
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=10
# DATABASE_POOL_PRE_PING=true

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Paperclip
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST=127.0.0.1
PORT=8000
RELOAD=true
WORKERS=1

# ============================================================================
# SECURITY
# ============================================================================
# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_STRATEGY=moving-window

# ============================================================================
# CACHING (Optional - Redis)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=false

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
SENTRY_DSN=optional-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=false
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ASYNC_PROCESSING=true
FEATURE_CACHING=false
FEATURE_WEBSOCKET_CHAT=false

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
ARXIV_API_URL=http://export.arxiv.org/api/query
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# ============================================================================
# FILE UPLOAD (if needed)
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads

# ============================================================================
# EMAIL (for notifications, future use)
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=noreply@paperclip.com

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_URL=http://localhost:3000
FRONTEND_HOST=localhost
FRONTEND_PORT=3000
